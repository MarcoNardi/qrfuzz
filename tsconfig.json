{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,

    "rootDir": "./src",
    "noEmit": true,

    "newLine": "lf",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "noUncheckedIndexedAccess": true,
  },
}
